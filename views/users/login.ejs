    <!DOCTYPE html>
    <html lang="en">
      <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Register Page</title>

        <link rel="stylesheet" href="styleslogin.css" />

        <!-- Fuente -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
          href="https://fonts.googleapis.com/css2?family=Alef&display=swap"
          rel="stylesheet"
        />
      </head>
      <body>
        <main>
    <%- include('./partials/header') %>

          <div class="container">
            <div class="container-form">
              <p>Accede con tus datos!</p>
              <form action="/users/login" method="POST" class="form">
                <label for="email">Direccion de mail</label>
                <input
                  type="text"
                  name="email"
                  required
                />
                <% if (locals.errors && errors.email) { %>
                 <div class="text-danger">
                  <%= errors.email.mgs %>
                 </div>
                <% } %>
                <label for="password" class="margin">Contrasenia</label>
                <input
                  type="password"
                  name="password"
                  required
                />
                <br>
                <label for="remember">Recordar datos</label>
                <input type="checkbox" name="remember">
                <input type="submit" value="Iniciar sesion" class="login"/>
              </form>
              <br>
              <p>No tenes cuenta? <a class="btn-style" href="/users/register">Registrate!</a></p>
            </div>
          </div>
    <%- include('./partials/footer') %>

        </main>
      </body>
    </html>
  </body>
</html>
